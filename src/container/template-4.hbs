<header class="header ">
	<div class="">
		{{>logo}}
	</div>

	<nav class="header_nav  ">
		<div class="header_nav_right">
			{{>nav_template list=header }}
		</div>

	</nav>
</header>

{{#with main}}
<div class="hero">
	<img class="hero_image" src="{{image}}" alt="Hero image">
	<div class="hero_content">
		<h1 class="hero_title">{{heading}}</h1>
		<p class="hero_text">{{descriotion}}</p>
		<div>
<a href="{{href}}" class="button card_button">{{button}}</a>
		</div>
		
	</div>
	
</div>
{{/with}}

<main class="blog">
{{#each featured}}
<div class="card">
	<div class="card_image" style="background-image: url({{photo}});"></div>
	<h2 class="card_title">{{heading}}</h2>
	<p class="card_text">{{info}}</p>
	<a href="{{linkUrl}}" class="button card_button">{{linkText}}</a>
</div>
{{/each}}

</main>


<div class="form">
	{{#each actions}}
	<div class="form_content">
		<h3 class="form_title">{{heading}}</h3>
		
	
	<div class="form_action">
		<a href="{{url}}" class="button form_button">{{text}}</a>
	</div>
	</div>
	{{/each}}
</div>


<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>

	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav_template list=links isVertical=true}}
	</div>
	{{/each}}

</footer>